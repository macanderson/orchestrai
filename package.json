{
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/api",
    "packages/db",
    "packages/ui"
  ],
  "devDependencies": {
    "concurrently": "^9.1.2",
    "turbo": "^1.13.3"
  },
  "scripts": {
    "dev": "concurrently \"pnpm --filter web dev\" \"pnpm --filter api dev\"",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "generate:prisma:py": "cd packages/db/prisma && prisma generate --generator python",
    "type-check": "pnpm -r run type-check"
  },
  "dependencies": {
    "typescript": "^5.8.3"
  }
}
